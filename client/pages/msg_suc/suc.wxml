<!-- pages/suc/suc.wxml -->
<view class="container">
  <view class="weui-msg">
    <view class="weui-msg__icon-area">
      <icon color="#7E57C2" type="success" size="93"></icon>
    </view>
    <view class="weui-msg__text-area">
      <view class="weui-msg__title">操作成功</view>
      <view class="weui-msg__desc">
        已完成此门课的评价
        <!-- <navigator url="" class="weui-msg__link">文字链接</navigator> -->
      </view>
    </view>
    <view class="weui-msg__opr-area">
      <view class="weui-btn-area">
        <button bind:tap="back" class="weui-btn pri-btn" type="primary">返回上一页</button>
        <button bind:tap="index" class="weui-btn d-btn" type="default">回到首页</button>
      </view>
    </view>
    <view class="weui-msg__extra-area">
      <view class="weui-footer">
        <view class="weui-footer__links">
          <navigator url="https://github.com/asadahimeka/hyoka" class="weui-footer__link">hyoka</navigator>
        </view>
        <view class="weui-footer__text">Copyright © 2008-2018 weui.io</view>
      </view>
    </view>
  </view>
</view>