/* pages/userinfo/userinfo.wxss */

.userbg {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 350rpx;
  color: #fff;
}

.bgimg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.blur {
  filter: blur(9px);
}

.option {
  position: relative;
  display: flex;
  flex-direction: column;
  flex: 1;
  background: #f1f1f1;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 0 0 30rpx;
  background: #aaa;
  border-radius: 50%;
}

.userinfo {
  display: flex;
  justify-content: center;
  width: 100%;
  text-align: center;
}

.role {
  width: 80rpx;
  height: 40rpx;
  margin-left: 40rpx;
  border: 1px solid rgb(255, 192, 156);
  border-radius: 15rpx;
  color: rgb(255, 192, 156);
}

.exit-btn{
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  width: 60%;
  margin-left: -30%;
  border-radius: 25rpx;
  background-image: linear-gradient(to right, #ed6ea0 0%, #ec8c69 100%);
  box-shadow: 0 0 20rpx 3rpx #ffafbd;
  color: #fff;
}

.button-hover{
  opacity: 0.9;
  box-shadow: 0 0 20rpx 3rpx #ffafbd inset;
}