/**index.wxss**/

.index{
  background: #fff;
}
.hi{
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
}
.welcome {
  margin: 40rpx 0;
  text-align: center;
  font-size: 40rpx;
  color: #000;
}

.navitem {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  margin: 40rpx 10%;
  color: #fff;
  font-size: 40rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  box-shadow: 10rpx 10rpx 40rpx 2rpx #bbb;
}

.nav-bg1 {
  background-image: linear-gradient(120deg, #fccb90 0%, #d57eeb 100%);
}

.nav-bg2 {
  background-image: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%);
}

.nav-bg3 {
  background-image: linear-gradient(to right, #ff758c 0%, #ff7eb3 100%);
}

.nav-bg4 {
  background-image: linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
}

.nav-bg5 {
  background-image: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.nav-hover {
  opacity: 0.8;
  box-shadow: 0 0 20rpx 2rpx #bbb inset;
}

.icon {
  position: absolute;
  left: 80rpx;
  width: 23px;
  height: 23px;
}